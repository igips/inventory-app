<!DOCTYPE html>
<html>
	<%- include("head.ejs") %>
	<body>
		<%- include("logo.ejs") %> <%- include("nav.ejs") %>
		<main>
			<div id="item-details">
                <p class="details-first-p"><%= item.name %></p>
                <div id="item-details-container">
                    <div id="item-details-div">
                        <% if(item.picLoc) { %>
                            <img class="item-img-large" src="/images/<%= item.picLoc %>" alt="">
                        <% } %>    
                       
                        <div id="item-details-data">
                            <p><b>Brand:</b> <%= item.brand %></p>
                            <p><b>Category:</b>  <% if(item.category) { %> <a href=<%= item.category.url %>><%= item.category.name %></a> <% } else { %> - <% } %></p>
                            <p><b>Stock:</b> <%= item.stock %></p>
                        </div>
                    </div>
                    <div class="edit-delete-div">
                        <a href="/items/<%= item._id %>/update" class="edit-btn">Edit</a>
                        <a href="/items/<%= item._id %>/delete" class="delete-btn">Delete</a>

                    </div>

                </div>
                
                

				
			</div>
		</main>

		<%- include("footer.ejs") %>
	</body>
</html>
